ScreenManagement:
    VKMenu:
    Analysis:

<VKMenu>:
    name: 'vkmenu'
    BoxLayout:
        orientation: "vertical"
        padding: root.width * 0.1, root.height * 0.2
        spacing: "10dp"
        # Labels and status    
        Label:
            id: tittle
            text: "Voigt-Kampff"
            font_size: "40dp" 
        Label:
            id: main_text
            text: ""
            font_size: "25dp"
        # Inputs for name and ID    
        TextInput:
            id: name_input
            hint_text: "Name"
            font_size: "15dp"
        TextInput:
            id: reg_input
            hint_text: "ID"
        # Record and Stop
        Button:
            text: "Save"
            on_release: root.on_save_btn_release(name_input.text)
        BoxLayout:
            orientation: "horizontal"
            spacing: "20dp"
            Button:
                text: "Record"
                on_release: main_text.text = "Recording"
            Button:
                text: "Stop"
                on_release: main_text.text = "Stopped" 
        # Save and Analysis (Next screen)
        Button:
            text: "Send to server"
            on_release: root.on_send_btn_release(name_input.text)
        Button:
            text: "Analysis"
            on_press:
                root.manager.transition.direction = "left"
                root.manager.current = "analysis"
<Analysis>:
    name: "analysis"
    BoxLayout:
        orientation: "vertical"
        padding: root.width * 0.1, root.height * 0.2
        spacing: "9dp"
        Label:
            id: tittle
            text: "Analysis"
            font_size: "40dp" 
        Label:
            id: status
            text: ""
            font_size: "25dp"
        Button:
            text: "Proccess phonetics"
            on_release: 
                status.text = "Proccessing"
                root.on_phon_btn_release()
        Button:
            text: "Latent semantic analysis"
            on_release:
                status.text = "Processing"
                root.on_lsa_btn_release()
        Button:
            text: "Back to menu"
            on_press: 
                root.manager.transition.direction = "right"
                root.manager.current = "vkmenu"

