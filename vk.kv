ScreenManagement:
    Login:
    Session:
    Register:
    VKMenu:
    Analysis:
    
<Login>:
    canvas.before:
        Color:
            rgba: 0.1803922, 0.3176471, 0.8549020, 0.9 
        Rectangle:
            pos: self.pos
            size: self.size
    name: "login"
    BoxLayout:
        id: login_screen
        orientation: "vertical"
        padding: root.width * 0.1, root.height * 0.2
        spacing: "10dp"
        Label:
            id: login_tittle
            text: "Voigt-Kampff"
            font_size: "40dp"
        Label:
            id: login_label
            text: "Automated speech assessment\nfor clinical environments"
            font_size: "15dp"
            halign: "center"
        TextInput:
            id: user_input
            hint_text: "User"
            font_size: "15dp"
        TextInput:
            id: pwd_input
            hint_text: "Password"
            password: True
        Button:
            text: "Login"
            background_color: 0.3568627, 0.4666667, 0.8980392, 1 
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "session"

<Session>:
    name: "session"
    canvas.before:
        Color:
            rgba: 0.1803922, 0.3176471, 0.8549020, 0.9 
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        id: session_box
        orientation: "vertical"
        padding: root.width * 0.1, root.height * 0.2
        spacing: "10dp"
        Button:
            text: "New patient"
            background_color: 0.3568627, 0.4666667, 0.8980392, 1 
            on_release:
                root.manager.transition.direction = "left" 
                root.manager.current = "register"
        Button:
            text: "Resume follow up"
            background_color: 0.3568627, 0.4666667, 0.8980392, 1 
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "vkmenu"
   
<Register>:
    name: "register"
    canvas.before:
        Color:
            rgba: 0.1803922, 0.3176471, 0.8549020, 0.9 
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        id: register_box
        orientation: "vertical"
        padding: root.width * 0.1, root.height * 0.2
        spacing: "10dp"
        TextInput:
            id: name_input
            hint_text: "Name"
            font_size: "15dp"
        TextInput:
            id: id_input
            hint_text: "ID"
            input_type: "number"
        TextInput:
            id: date_input
            hint_text: "Birth date"
            font_size: "15dp"
        TextInput:
            id: pin_input
            hint_text: "PIN"
            input_type: "number"
        Button:
            text: "Save and send to server"
            background_color: 0.3568627, 0.4666667, 0.8980392, 1 
            on_press:
                root.on_savestart_btn_release(name_input.text, id_input.text, date_input.text, pin_input.text)
        Button:
            text: "Start session"
            background_color: 0.3568627, 0.4666667, 0.8980392, 1 
            on_press:
                root.manager.transition.direction = "left"
                root.manager.current = "vkmenu"

<VKMenu>:
    canvas.before:
        Color:
            rgba: 0.1803922, 0.3176471, 0.8549020, 0.9 
        Rectangle:
            pos: self.pos
            size: self.size
    name: "vkmenu"
    BoxLayout:
        id: all_box
        orientation: "vertical"
        padding: root.width * 0.1, root.height * 0.2
        spacing: "10dp"
        # Labels and status    
        Label:
            id: tittle
            text: "Voigt-Kampff"
            font_size: "40dp" 
        Label:
            id: main_text
            text: ""
            font_size: "25dp"
        # Inputs for name and ID    
        TextInput:
            id: name_input
            hint_text: "Name"
            font_size: "15dp"
        TextInput:
            id: reg_input
            hint_text: "ID"
            input_type: "number"
        # Record and Stop
        Button:
            text: "Save"
            on_release: root.on_save_btn_release(name_input.text)
            background_color: 0.3568627, 0.4666667, 0.8980392, 1 
        BoxLayout:
            orientation: "horizontal"
            spacing: "20dp"
            Button:
                text: "Record"
                on_release: main_text.text = "Recording"
                background_color: 0.3568627, 0.4666667, 0.8980392, 1 
            Button:
                text: "Stop"
                on_release: main_text.text = "Stopped" 
                background_color: 0.3568627, 0.4666667, 0.8980392, 1 
        # Save and Analysis (Next screen)
        Button:
            text: "Send to server"
            on_release: root.on_send_btn_release(name_input.text)
            background_color: 0.3568627, 0.4666667, 0.8980392, 1  
        Button:
            text: "Server interface"
            background_color: 0.3568627, 0.4666667, 0.8980392, 1 
            on_press:
                root.manager.transition.direction = "left"
                root.manager.current = "analysis"
<Analysis>:
    name: "analysis"
    BoxLayout:
        orientation: "vertical"
        padding: root.width * 0.1, root.height * 0.2
        spacing: "9dp"
        Label:
            id: tittle
            text: "Analysis"
            font_size: "40dp" 
        Label:
            id: id_tittle
            text: "Insert patient ID"
            font_size: "20dp" 
        TextInput:
            id: reg_input
            hint_text: "ID"
            input_filter: "int"
        Label:
            id: status
            text: ""
            font_size: "25dp"
        Button:
            text: "Proccess phonetics"
            on_release: 
                status.text = "Proccessing"
                phon_status.text = "Phonetic affinity:\n" + str(root.on_phon_btn_release(reg_input.text))
                status.text = "Done"
        Label:
            id: phon_status
            text: ""
            font_size: "15dp" 
            halign: "center"
        Button:
            text: "Latent semantic analysis"
            on_release:
                status.text = "Processing"
                root.on_lsa_btn_release()
        Button:
            text: "Back to menu"
            on_press: 
                root.manager.transition.direction = "right"
                root.manager.current = "vkmenu"

