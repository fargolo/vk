<VKMenu>:
    orientation: "vertical"
    padding: root.width * 0.1, root.height * 0.2
    spacing: "10dp"
    
    Label:
        id: tittle
        text: "Voigt-Kampff"
        font_size: "40dp" 
    Label:
        id: main_text
        text: ""
        font_size: "25dp"
# Input    
    TextInput:
        id: name_input
        hint_text: "Name"
        font_size: "15dp"
    TextInput:
        id: reg_input
        hint_text: "ID"
# Record
    BoxLayout:
        orientation: "horizontal"
        spacing: "20dp"
        Button:
            text: "Record"
            on_release: main_text.text = "Recording"
        Button:
            text: "Stop"
            on_release: main_text.text = "Stopped" 
    Button:
        text: "Save"
        on_release: root.on_save_btn_release(name_input.text)
    Button:
        text: "Analysis"
        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'analysis'
